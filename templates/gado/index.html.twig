{% extends 'base.html.twig' %}

{% block body %}

    <section class="fz-gado">
        <div class="container">

            <div class="fz-container-titulo justify-content-between">
                <h5 class="fz-titulo">Gados</h5>
                <a href="{{ path('app_gado_new') }}" class="btn btn-success text-white">
                    <i class="fa-solid fa-plus"></i> Cadastrar
                </a>
            </div>

            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <div class="table-responsive">

                        <table class="table table-striped table-hover align-middle">
                            <thead class="table-light">
                            <tr class="text-center">
                                <th>Codigo</th>
                                <th>Peso</th>
                                <th>Nascimento</th>
                                <th>Abate</th>
                                <th>actions</th>
                            </tr>
                            </thead>

                            <tbody>
                            {% if pagination|length > 0 %}
                                {% for gado in pagination %}
                                    <tr class="text-center">
                                        <td>{{ gado.codigo }}</td>
                                        <td>{{ gado.peso }}</td>
                                        <td>{{ gado.nascimento }}</td>
                                        <td>{{ gado.abate }}</td>
                                        <td>
                                            <a href="{{ path('app_gado_show', {'id': gado.id}) }}" class="btn btn-info text-white">Visualizar</a>
                                            <a href="{{ path('app_gado_edit', {'id': gado.id}) }}" class="btn btn-warning">Editar</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            {% else %}
                                <tr>
                                    <td colspan="4" class="text-center text-muted">Nenhum animal encontrado.</td>
                                </tr>
                            {% endif %}
                            </tbody>

                        </table>

                        <div class="d-flex justify-content-center">
                            {{ knp_pagination_render(pagination) }}
                        </div>

                    </div>
                </div>
            </div>

        </div>
    </section>
{% endblock %}
