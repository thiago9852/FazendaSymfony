    <h1>Gado</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ gado.id }}</td>
            </tr>
            <tr>
                <th>Codigo</th>
                <td>{{ gado.codigo }}</td>
            </tr>
            <tr>
                <th>Peso</th>
