{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">

        <div class="fz-container-titulo">
            <h5 class="fz-titulo">Informações do animal </h5>
        </div>

        <div class="card shadow-sm border-0">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped">
                        <tbody>
                        <tr>
                            <th scope="row">Código</th>
                            <td>{{ gado.codigo }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Peso</th>
                            <td>{{ gado.peso }} kg</td>
                        </tr>
                        <tr>
                            <th scope="row">Ração</th>
                            <td>{{ gado.racao }} kg/semana</td>
                        </tr>
                        <tr>
                            <th scope="row">Leite</th>
                            <td>{{ gado.leite }} L/semana</td>
                        </tr>
                        <tr>
                            <th scope="row">Nascimento</th>
                            <td>{{ gado.nascimento ? gado.nascimento|date('d/m/Y') : '—' }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Abate</th>
                            <td>
                                {% if gado.abate %}
                                    <span class="badge bg-danger">Sim</span>
                                {% else %}
                                    <span class="badge bg-success">Não</span>
                                {% endif %}
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>

                <div class="mt-3 d-flex gap-2">
                    <a href="{{ path('app_gado_edit', {'id': gado.id}) }}" class="btn btn-warning">Editar</a>
                    {{ include('gado/_delete_form.html.twig') }}
                </div>
            </div>
        </div>

    </div>

{% endblock %}
