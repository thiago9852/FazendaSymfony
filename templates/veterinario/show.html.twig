{% extends 'base.html.twig' %}

{% block body %}
    <div class="container my-4">
        <div class="fz-container-titulo">
            <h5 class="fz-titulo">Informações do veterinário </h5>
        </div>

        <div class="card shadow-sm">
            <div class="card-body">
                <p><strong>Nome:</strong> {{ veterinario.nome }}</p>
                <p><strong>CRMV:</strong> {{ veterinario.crmv }}</p>
            </div>

            <div class="m-3 d-flex gap-2">
                <a href="{{ path('app_veterinario_edit', {'id': veterinario.id}) }}" class="btn btn-warning">Editar</a>
                {{ include('veterinario/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
