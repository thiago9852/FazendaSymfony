{% extends 'base.html.twig' %}

{% block title %}Fazenda index{% endblock %}

{% block body %}
    <h1>Fazenda index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Tamanho</th>
                <th>Responsavel</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for fazenda in fazendas %}
            <tr>
                <td>{{ fazenda.id }}</td>
                <td>{{ fazenda.nome }}</td>
                <td>{{ fazenda.tamanho }}</td>
                <td>{{ fazenda.responsavel }}</td>
                <td>
                    <a href="{{ path('app_fazenda_show', {'id': fazenda.id}) }}">show</a>
                    <a href="{{ path('app_fazenda_edit', {'id': fazenda.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_fazenda_new') }}">Create new</a>
{% endblock %}
